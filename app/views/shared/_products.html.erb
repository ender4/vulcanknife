<% unless @v_banner_shown %>
  <%= render 'shared/product_banner' %>
  <% @v_banner_shown = 1 %>
<% end %>

<% reset_cycle('default') %>
<% products.each do |product| %>
  <% if ((Spree::Config[:show_available_in_store_only_products] && product.available_in_store_only) || ((Spree::Config[:show_zero_stock_products] || product.has_stock?) && !product.available_in_store_only)) %>
    <li id="product_<%= product.id %>" class="columns three <%= cycle("alpha", "secondary", "", "omega secondary") %>" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
      <div class="product-image">
        <%= link_to small_image(product, :itemprop => "image"), product, :itemprop => 'url' %>
      </div>
      <%= link_to truncate(product.name, :length => 50), product, :class => 'info', :itemprop => "name", :title => product.name %>
      <span class="price selling" itemprop="price"><%= number_to_currency product.price %></span>
    </li>
  <% end %>
<% end %>

