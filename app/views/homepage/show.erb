<% content_for :banner do %>
  <section>
    <div class="v_carousel_content">
      <ul>
        <% @banner_items.each_with_index do |item, i| %>
          <li class="v-carousel-image" id="v-carousel-index-<%= i %>">
            <%= link_to item.link do %>
              <%= image_tag item.icon.url(:normal, false), :width => 320, :height => 240, :alt => (item.alt || item.name) %>
            <% end %>
          </li>
        <% end  %>
      </ul>
    </div>
  </section>
<% end %>

<% content_for :bannernav do %>
  <ul>
    <li class="v-carousel-prev"><a href="#">&laquo;</a></li>
      <% @banner_items.each_with_index do |item, i| %>
        <li class="v-carousel-nav v-carousel-index-<%= i %>"><a href="#"><%= item.name %></a></li>
      <% end %>
    <li class="v-carousel-next"><a href="#">&raquo;</a></li>
  </ul>
<% end %>

<% content_for :sidebar do %>
  <div data-hook="taxon_sidebar_navigation">
    <%= render :partial => "spree/shared/taxonomies" %>
  </div>
<% end %>

